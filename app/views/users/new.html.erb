<h1 class="ui center aligned header">Welcome to MessageMe</h1>
<h2 class="ui center aligned medium icon header">
  <i class="circular pink power icon"></i>
  Sign up to continue
</h2>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with(model: @user, html: {class: "ui form", role: "form" }, local:true) do |f| %>
        
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Sign up", class: "ui pink submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">

      <%= link_to "Log in", login_path, class:"ui pink big button" %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>